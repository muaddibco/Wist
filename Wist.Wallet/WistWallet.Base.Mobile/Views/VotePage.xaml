<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WistWallet.Base.Mobile.Views.VotePage"
             BindingContext="{Binding VoteViewModel, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding VotePoll.Description}" HorizontalTextAlignment="Center" Style="{DynamicResource ListItemTextStyle}"/>
            <ListView 
                IsEnabled="{Binding VotePoll.OpenForVoting}"
                ItemsSource="{Binding VotePoll.Votings}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Label}" 
                                   LineBreakMode="NoWrap" 
                                   Style="{DynamicResource ListItemTextStyle}" 
                                   FontSize="16" />
                                <Switch IsToggled="{Binding IsSelected}" 
                                    VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>